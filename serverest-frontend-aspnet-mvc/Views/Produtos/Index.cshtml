@model IEnumerable<serverest_frontend_aspnet_mvc.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th width="10%">
                @Html.DisplayNameFor(model => model._id)
            </th>
            <th width="20%">
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th width="25%">
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th width="10%">
                @Html.DisplayNameFor(model => model.preco)
            </th>
            <th width="10%">
                @Html.DisplayNameFor(model => model.quantidade)
            </th>
            <th width="25%"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantidade)
            </td>
                <td>
                    @Html.ActionLink("Visualizar", "Details", new { id = item._id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Editar", "Edit", new { id = item._id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Apagar", "Delete", new { id = item._id }, new { @class = "btn btn-danger" })
                </td>
        </tr>
}
    </tbody>
</table>
